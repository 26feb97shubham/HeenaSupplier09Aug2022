<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_4sdp"
    android:padding="@dimen/_8sdp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_selected_unselected"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/unselected_radio_button"/>

    <TextView
        android:id="@+id/tv_card_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_selected_unselected"
        android:layout_marginStart="@dimen/_14sdp"
        android:text="@string/card_title"
        android:fontFamily="@font/avenir_medium"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintTop_toTopOf="@id/iv_selected_unselected"
        app:layout_constraintBottom_toBottomOf="@id/iv_selected_unselected"/>

    <TextView
        android:id="@+id/tv_ending_card_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_14sdp"
        android:text="@string/card_title"
        android:fontFamily="@font/avenir_medium"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintTop_toTopOf="@id/tv_card_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_card_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>