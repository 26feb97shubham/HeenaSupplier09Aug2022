<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_8sdp"
    android:layout_marginVertical="@dimen/_6sdp"
    android:layout_marginHorizontal="@dimen/_10sdp"
    app:cardElevation="@dimen/_6sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_12sdp">


        <TextView
            android:id="@+id/tv_booking_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="BOOK#070821001"
            android:textAllCaps="true"
            android:fontFamily="@font/avenir_medium"
            android:textColor="@color/text_gold_color_dark"
            android:textSize="@dimen/_10ssp"/>

        <TextView
            android:id="@+id/tv_booking_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="07 / 08 / 2021"
            android:textAllCaps="true"
            android:fontFamily="@font/avenir_medium"
            android:textColor="@color/text_gold_color_dark"
            android:textSize="@dimen/_10ssp"/>


        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="0.5sp"
            android:background="@color/gold"
            app:layout_constraintTop_toBottomOf="@id/tv_booking_id"
            android:layout_marginTop="@dimen/_8sdp"/>

        <TextView
            android:id="@+id/tv_service_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="Drawing Service"
            android:textAllCaps="true"
            android:fontFamily="@font/avenir_medium"
            android:textColor="@color/text_gold_color_dark"
            android:textSize="@dimen/_10ssp"/>

        <TextView
            android:id="@+id/tv_service_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="AED 1,000"
            android:textAllCaps="false"
            android:fontFamily="@font/avenir_medium"
            android:textColor="@color/text_gold_color_dark"
            android:textSize="@dimen/_9ssp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>