<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/membershipDetailsFragmentConstraintLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    tools:context=".fragments.MembershipDetailsFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_15ssp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_membership_status_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_medium"
                android:text="@string/featured_membership_status"
                android:textAllCaps="false"
                android:textColor="@color/gold"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_viewall_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_medium"
                android:text="@string/view_all"
                android:textAllCaps="true"
                android:textColor="@color/gold"
                android:textSize="@dimen/_10ssp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/tv_membership_status_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_membership_status_txt" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_membership_txt"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/curved_gold_filled_rect_box"
                android:fontFamily="@font/avenir_medium"
                android:gravity="center"
                android:text="@string/membership"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_7ssp"
                app:layout_constraintBottom_toBottomOf="@id/tv_membership_status_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_membership_status_txt" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_do_u_wnt_to_featured_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_medium"
                android:text="@string/do_you_want_to_become_a_featured_henna"
                android:textAllCaps="false"
                android:textColor="@color/gold"
                android:textSize="@dimen/_9ssp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_membership_status_txt" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/membership_card_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_6sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_do_u_wnt_to_featured_txt">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_10sdp">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_membership_title_txt_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/avenir_medium"
                        android:text="@string/featured_membership"
                        android:textAllCaps="false"
                        android:textColor="@color/gold"
                        android:textSize="@dimen/_11ssp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_membership_plan_price_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/avenir_medium"
                        android:text="AED 250"
                        android:textAllCaps="false"
                        android:textColor="@color/gold"
                        android:textSize="@dimen/_10ssp"
                        app:layout_constraintBottom_toBottomOf="@id/tv_membership_title_txt_details"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_membership_title_txt_details" />

                    <View
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@color/gold"
                        app:layout_constraintTop_toBottomOf="@id/tv_membership_title_txt_details" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_expiration_date_txt_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:fontFamily="@font/avenir_medium"
                        android:text="@string/expiration_date"
                        android:textAllCaps="false"
                        android:textColor="@color/gold"
                        android:textSize="@dimen/_8ssp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/view1" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_expiration_date_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/avenir_medium"
                        android:text="AED 250"
                        android:textAllCaps="false"
                        android:textColor="@color/gold"
                        android:textSize="@dimen/_8ssp"
                        app:layout_constraintBottom_toBottomOf="@id/tv_expiration_date_txt_details"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_expiration_date_txt_details" />

                    <ProgressBar
                        android:id="@+id/linearprogressindicator_details"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="100"
                        android:progressTint="@color/gray"
                        app:layout_constraintStart_toStartOf="@+id/tv_expiration_date_details"
                        app:layout_constraintTop_toBottomOf="@+id/tv_expiration_date_details" />

                    <ProgressBar
                        android:id="@+id/linearprogressindicator1_details"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="60"
                        android:progressTint="@color/gold"
                        app:layout_constraintStart_toStartOf="@+id/tv_expiration_date_details"
                        app:layout_constraintTop_toBottomOf="@+id/tv_expiration_date_details" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_add_new_featured"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_15sdp"
                app:cardCornerRadius="@dimen/_6sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/membership_card_details"
                app:strokeColor="@color/gold"
                app:strokeWidth="1dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_add_new_featured"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawablePadding="@dimen/_8sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/avenir_medium"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingHorizontal="@dimen/_8sdp"
                    android:text="@string/add_new_service"
                    android:textAllCaps="false"
                    android:textColor="@color/text_gold_color_dark"
                    android:textDirection="locale"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="normal"
                    app:drawableStartCompat="@drawable/plus_layer_list"
                    app:layout_constraintBottom_toBottomOf="@id/tv_payment_txt2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </com.google.android.material.card.MaterialCardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_add_new_featured_listing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@id/card_add_new_featured" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/frag_membership_details_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="@dimen/_5sdp"
        android:visibility="gone"
        style="@style/Theme.Progressbar"
        android:indeterminateTint="@color/gold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/ll_no_services_found_membership_details"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_no_service_membership_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/avenir_medium"
            android:textColor="@color/gold"
            android:textSize="@dimen/_14ssp"
            android:textStyle="normal"
            android:text="@string/no_service_found"
            android:textAllCaps="false"
            android:paddingHorizontal="@dimen/_8sdp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>